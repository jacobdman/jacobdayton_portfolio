rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read access to all files (for portfolio images)
    // This allows anyone to view images without authentication
    match /{allPaths=**} {
      allow read: if true;
      // Only allow authenticated users to write (you can restrict this further if needed)
      allow write: if request.auth != null;
    }
  }
}
